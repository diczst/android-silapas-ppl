<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JadwalActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_informasi"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal Pelayanan"
                android:textColor="@color/hijau"
                android:textSize="35sp"
                android:layout_marginTop="@dimen/_110sdp"
                android:textStyle="bold"
                android:layout_marginHorizontal="5dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silahkan lihat jadwal pelayanan untuk memudahkan melakukan kunjungan dan titipan"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:maxLines="2"
                android:lineHeight="@dimen/_16sdp"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/hijau">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="Pidana Umum"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:layout_marginBottom="@dimen/_14sdp"
                        app:cardCornerRadius="@dimen/_16sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white">

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_12sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:background="@drawable/rounded_corner">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Senin"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_gravity="center"
                                        />

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginHorizontal="@dimen/_10sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rabu"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_gravity="center"/>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginHorizontal="@dimen/_10sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sabtu"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_gravity="center"/>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dari jam 08.00 - 12.00"
                                android:textSize="@dimen/_14sdp"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_12sdp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Pidana Khusus"
                        android:textSize="@dimen/_18sdp"
                        android:textColor="@color/white"
                        android:layout_marginStart="16dp"
                        android:textStyle="bold"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_14sdp"
                        app:cardCornerRadius="@dimen/_16sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            >

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"

                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_12sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginHorizontal="@dimen/_20sdp"
                                    android:background="@drawable/rounded_corner">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Selasa"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_gravity="center"/>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginHorizontal="@dimen/_20sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Kamis"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_gravity="center"/>

                                </androidx.cardview.widget.CardView>



                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dari jam 08.00 - 12.00"
                                android:textSize="@dimen/_14sdp"
                                android:layout_marginBottom="@dimen/_14sdp"
                                android:layout_marginTop="@dimen/_12sdp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Titipan Barang"
                        android:textSize="@dimen/_18sdp"
                        android:layout_marginStart="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        app:cardCornerRadius="@dimen/_16sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white">

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"

                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_12sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginHorizontal="@dimen/_13sdp"
                                    android:background="@drawable/rounded_corner">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Senin"
                                        android:textSize="@dimen/_14sdp" />

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginHorizontal="@dimen/_13sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Selasa"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_gravity="center"/>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginHorizontal="@dimen/_13sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rabu"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_gravity="center"/>

                                </androidx.cardview.widget.CardView>







                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_12sdp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginHorizontal="@dimen/_20sdp"
                                    android:background="@drawable/rounded_corner">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Kamis"
                                        android:textSize="@dimen/_14sdp" />

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginHorizontal="@dimen/_20sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sabtu"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_gravity="center"/>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dari jam 08.99 - 12.00"
                                android:textSize="@dimen/_14sdp"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_12sdp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pilih Waktu Layanan berdasarkan Jadwal yang Telah Ditentukan"
                            android:textAlignment="center"
                            android:layout_marginBottom="@dimen/_18sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:textColor="@color/white"
                            android:lineHeight="@dimen/_22sdp"
                            android:textSize="@dimen/_13sdp"/>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>



    </LinearLayout>

</ScrollView>